
@using iWishApp.Controllers;
@using iWishApp.Data;
@using iWishApp.Models;
@using iWishApp;
@using iWishApp.ViewModels;

<!DOCTYPE html>
<html>
<head>
    <title>Affirmations and Goals</title>
</head>
<body>
    <div class="container">
        <h1>Affirmations and Goals</h1>

        <div class="row">
            <div class="col-md-6">
                <h3>Affirmations</h3>
                <form asp-controller="Home" asp-action="AddJournalEntry" method="post">
                    <input type="text" name="Affirmation" class="form-control" placeholder="Enter Affirmation">
                    <input type="submit" value="Add Affirmation" class="btn btn-primary">
                </form>

                <div class="list-group">
                    @foreach (var journal in Model.Journals)
                    {
                        <h4>@journal.Affirmation</h4>
                    }
                </div>
            </div>

            <div class="col-md-6">
                <h3>Goals</h3>
                <form asp-controller="Home"asp-action="AddJournalEntry" method="post">
                    <input type="text" name="Goals" class="form-control" placeholder="Enter Goals">
                    <input type="submit" value="Add Goal" class="btn btn-primary">
                </form>

                <div class="list-group">
                    @foreach (var journal in Model.Journals)
                    {
                        <h4>@journal.Goals</h4>
                    }
                </div>
            </div>

            <!-- Add sections for Actions and Reflections in a similar way -->

        </div>
    </div>
</body>
</html>