@using System;
@using iWishApp.ViewModels;
@using iWishApp.Models;
@using iWishApp.Data;
@using iWishApp;
@using iWishApp.Controllers;
@model iWishApp.ViewModels.AddAffirmationsViewModel;


@{
    ViewData["Title"] = "Delete Affirmations";


}


<!DOCTYPE HTML>
<html>
<head>

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-md fixed-top navbar-dark" style="color:white;">
            <a class="navbar-brand" href="#">Fixed navbar</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Affirmations" asp-action="Add">Add</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Affirmations" asp-action="Delete">Delete</a>
                    </li>
                </ul>
                <form class="form-inline mt-2 mt-md-0">
                    <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </nav>

    </header>

    <div class="container-fluid p-0">
        <!-- Video background -->
        <video src="/images/rainForest.mp4" autoplay loop muted playsinline style="position:fixed; top: 0; left: 0; width: 100%; height:100%; object-fit: cover;"></video>

        <div class="position-absolute top-50 start-50 translate-middle">

            <div class="delete-affirmations-list">

                <div class="position-relative">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="row">

                                <div class="col-md-10 offset">
                                    <div class="mr-md-4" style="padding-top:230rem;">
                                        <h1 class="display-4 text-center" style="color: white; padding-top: 10rem; text-align:justify-all">Delete Affirmations</h1>


                                        @*<-------refactur code to get un-orderedlist output from affirmations list---->*@

                                        @*<---Keep post--->*@


                                        <form method="post">
                                            <ul class="list-group mt-4">
                                                @foreach (var affirmation in ViewBag.affirmations)


                                                {
                                                    <li class="list-group-item">
                                                        <div class="form-check">
                                                            @*<span>@affirmation.Text</span>*@
                                                            <input class="form-check-input" type="checkbox" name="affirmationIds" value="@affirmation.Id">
                                                        </div>
                                                        <label class="form-check-label" for="Delete">
                                                            @affirmation.Text
                                                        </label>

                                                    </li>
                                                }

                                                <input type="submit" value="Delete" class="btn btn-danger">


                                            </ul>
                                        </form>

                                        <div class="text-center mt-4">
                                            <a asp-controller="Affirmations" asp-action="Add" class="btn btn-primary">Add Affirmation</a>
                                        </div>



                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
