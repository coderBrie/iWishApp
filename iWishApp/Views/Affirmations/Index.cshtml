        <video src="/images/rainForest.mp4" autoplay loop muted playsinline style="position:fixed; top: 0; left: 0; width: 100%; height:100%; object-fit: cover;"></video>

        <div class="position-absolute top-50 start-50 translate-middle">

            <div class="affirmations-list">

                <div class="position-relative">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="row">

                                <div class="col-md-10 offset">
                                    <div class="mr-md-4" style="padding-top: 10rem;">
                                        <h1 class="display-4 text-center" style="color: white; padding-top: initial; text-align: justify-all; color: whitesmoke; text-shadow:#ffeb00;">Positive Affirmations</h1>

                                        @if (Model.Count == 0)
                                        {
                                            <p style="font-size: 15px; color: whitesmoke; padding-top: 1rem;">No affirmations yet!</p>
                                        }
                                        else
                                        {
                                            <ul class="list-group mt-4">
                                                @foreach (var affirmation in Model)
                                                {
                                                    <h2 class="hidden-heading" style="color: white;">
                                                        @affirmation.Text
                                                    </h2>
                                                }
                                            </ul>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



