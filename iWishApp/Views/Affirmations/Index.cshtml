    <script>window.addEventListener('DOMContentLoaded', function () {
            const headings = document.querySelectorAll('.hidden-heading');
            let delay = 0;

            headings.forEach(function (heading) {
                setTimeout(function () {
                    heading.classList.add('show-heading');
                }, delay * 1000); // Multiply the delay by 1000 to convert to milliseconds
                delay += 0.5; // Adjust the delay between each heading
            });
        });</script>

