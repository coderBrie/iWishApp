    <style>



        .affirmations-list {
            display: flex;
            font-size: 300px;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 50vh;
            padding: 0 50px;
            padding-top: inherit;
        }

            .affirmations-list ul {
                list-style: none;
                padding: 0;
            }

            .affirmations-list h3 {
                text-align: center;
                margin-bottom: 10px;
            }

        .hidden-heading {
            opacity: 0;
            transition: opacity 1s ease-in-out;
        }

        .show-heading {
            opacity: 1;
        }

        h2 {
            color: white;
            font-size: 25px;
            font-weight: bold;
