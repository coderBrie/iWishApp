<body>
    <header>

        <div id="colorlib-page">
            <a href="#" class="js-colorlib-nav-toggle colorlib-nav-toggle"><i></i></a>
            <aside id="colorlib-aside" role="complementary" class="js-fullheight">
                <nav id="colorlib-main-menu" role="navigation">
                    <ul>
                        <li class="colorlib-active"><a href="index.html">Home</a></li>
                        <li><a asp-controller="Affirmations" asp-action="Index">Affirmations</a></li>
                        <li><a href="travel.html">Travel</a></li>
                        <li><a href="about.html">About</a></li>
                        <li><a href="contact.html">Contact</a></li>
                    </ul>
                </nav>


                <div class="colorlib-footer">
                    <h1 id="colorlib-logo" class="mb-4"><a href="index.html" style="background-image: url(images/bg_1.jpg);"> iBelieve<span class="d-inline-block text-wrap"> . .  & iAM</span></a></h1>
                    <div class="mb-4">
                        <h3>Add to Wishlist</h3>
                        <form action="@Url.Action("Add", "Affirmations")" method="post" class="colorlib-subscribe-form">
                            <div class="form-group d-flex">
                                <div class="icon"><span class="icon-paper-plane"></span></div>
                                <input type="text" name="Text" class="form-control" placeholder="Enter Affirmations">
                            </div>
                            <input type="submit" value="Add to Wishlist" class="btn btn-primary">
                        </form>

                        <form action="@Url.Action("Delete", "Affirmations")" method="post">
                            <button type="submit" class="btn btn-danger">Delete Selected Affirmations</button>
                        </form>
                    </div>
                </div>

    </header>



    <div class="container">
        <div class="row">
            <div class="col-md-10 offset-md-2">
                <div class="mr-md-4">

                    <div style="background-color: lightpink;">
                        <h1 class="display-4 text-center">Positive Affirmations</h1>


                        @if (Model.Count == 0)
                        {
                            <p>No affirmations yet!</p>
                        }
                        else
                        {
                            <ul class="list-group mt-4">
                                @foreach (var affirmation in Model)
                                {


                                    <li class="list-group-item">

                                        <div class="form-check" id="margin-bg">
                                            <input class="form-check-input" type="checkbox" id="Add" name="Add" value="@affirmation.Id">
                                            <div class="margin-bg" id="margin-bg">
                                                <label class="form-check-label" for="Add">
                                                    @affirmation.Text
                                                </label>

                                            </div>
                                    </li>

                                }
                            </ul>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>






    <div class="container">
        <div class="row">
            <div class="col-md-10 offset-md-2">
                <div class="mr-md-4">


                    <form asp-action="Index" method="get">
                        <div class="form-group">
                            <label for="SearchString">Search and you shall find: </label>
                            <input type="Text" name="SearchString"
                                   value="@ViewBag.CurrentFilter" />

                            @*button for search feature*@

                            <input type="submit" value="Searching" class="btn btn-primary" />

                        </div>
                    </form>
                    <div class="text-center mt-4">
                        <a asp-controller="Affirmations" asp-action="Add" class="btn btn-primary">Add Affirmation</a>
                        <p><a asp-controller="Affirmations" asp-action="Delete">Delete Selected Affirmations</a></p>
                        <button type="submit" class="btn btn-danger" form="deleteForm">Delete Selected Affirmations</button>
                    </div>
                    <form>
                        <a id="deleteForm" method="post" asp-controller="Affirmations" asp-action="Delete"> </a>
                        <input type="hidden" name="returnUrl" value="@ViewData[" ReturnUrl"]" />
                    </form>



                </div>
            </div>
        </div>
    </div>

    </div>
    </div>


