@using System;
@using iWishApp.ViewModels;
@using iWishApp.Models;
@using iWishApp.Data;
@using iWishApp;



<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-2">
            <div class="mr-md-4">
                <h1>Delete Affirmations</h1>


                <form method="post">
                    @foreach (var affirmation in ViewBag.affirmations)
                    {
                        <div class="form-group">
                            <label>
                                <span>@affirmation.Text</span>
                                <input type="checkbox" name="affirmationIds" value="@affirmation.Id" class="form-control">
                            </label>
                        </div>
                    }

                    <input type="submit" value="Delete Selected Affirmations" class="btn btn-danger">

                </form>

            </div>
        </div>
    </div>
</div>